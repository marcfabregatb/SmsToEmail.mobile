<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:SmsToEmail.mobile"
			 xmlns:converters="clr-namespace:SmsToEmail.mobile.Helpers.Converters"
			 x:Class="SmsToEmail.mobile.App">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/Styles/Colors.xaml" />
				<ResourceDictionary Source="Resources/Styles/Styles.xaml" />
			</ResourceDictionary.MergedDictionaries>

            <converters:ServiceRunningToColorConverter x:Key="ServiceRunningToColorConverter"/>
            <converters:ServiceRunningToTextConverter x:Key="ServiceRunningToTextConverter"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
